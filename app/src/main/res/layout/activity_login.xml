<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/atr_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_polije"
                android:contentDescription="Logo SIPORA"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/atr_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SIPORA"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/atr_app_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sistem Informasi Polije Repository Assets"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Login Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:elevation="6dp">

            <!-- âœ… ubah username jadi email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="Email"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="10dp"
                android:textSize="12sp"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:hint="Password"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_edittext"
                android:paddingHorizontal="10dp"
                android:textSize="12sp"
                android:inputType="textPassword" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cbShowPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lihat Password"
                    android:textSize="11sp"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lupa Password?"
                    android:textColor="#1976D2"
                    android:textSize="11sp"
                    android:gravity="end"
                    android:foreground="?attr/selectableItemBackground" />
            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#1976D2"
                android:text="LOGIN"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atau"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edittext"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="Belum punya akun? Daftar di sini"
                android:textColor="#1976D2"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
