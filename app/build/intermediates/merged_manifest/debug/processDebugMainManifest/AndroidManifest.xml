<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sipora"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="36" />

    <!-- Internet access -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Optional storage permission -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <permission
        android:name="com.example.sipora.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.example.sipora.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_polije"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/ic_polije"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.Sipora"
        android:usesCleartextTraffic="true" >

        <!-- Launcher -->
        <activity
            android:name="com.example.sipora.rizalmhs.Register.OpeningActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity
            android:name="com.example.sipora.rizalmhs.Register.RegisterActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.LoginActivity"
            android:exported="true" />

        <!-- Main features -->
        <activity
            android:name="com.example.sipora.rizalmhs.Register.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.DashboardActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.UploadActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.SearchActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.DownloadActivity"
            android:exported="true" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.BrowseActivity"
            android:exported="true"
            android:label="Browse Dokumen" />

        <!-- NEW: WebView Preview Activity -->
        <activity
            android:name="com.example.sipora.rizalmhs.Register.WebViewActivity"
            android:exported="true"
            android:label="Preview Dokumen" />

        <!-- Onboarding -->
        <activity
            android:name="com.example.sipora.rizalmhs.Register.Opening01Activity"
            android:exported="false" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.Opening02Activity"
            android:exported="false" />
        <activity
            android:name="com.example.sipora.rizalmhs.Register.Opening03Activity"
            android:exported="false" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.sipora.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>