<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#4CAF50"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Diterbitkan"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- Judul Dokumen -->
        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Judul Dokumen"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp" />

        <!-- Deskripsi/Abstrak -->
        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Deskripsi dokumen akan muncul di sini..."
            android:textColor="#666"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

        <!-- Informasi Uploader, Jurusan, Tahun, Download -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <!-- Uploader -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvUploader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Nama Uploader"
                    android:textColor="#444"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Jurusan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvJurusan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Teknologi Informasi"
                    android:textColor="#444"
                    android:textSize="13sp" />

            </LinearLayout>

            <!-- Tahun dan Download Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textColor="#666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTahun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="2025"
                    android:textColor="#444"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvDownloadCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="233 Download"
                    android:textColor="#666"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Garis pemisah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#EEEEEE" />

        <!-- Footer: Tanggal dan Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTanggal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="24 September 2025"
                android:textColor="#999"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Lihat"
                    android:textAllCaps="false"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#DDD" />

                <Button
                    android:id="@+id/btnDownload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:text="Download"
                    android:textAllCaps="false"
                    android:textColor="#2196F3"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    style="?android:attr/borderlessButtonStyle" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>