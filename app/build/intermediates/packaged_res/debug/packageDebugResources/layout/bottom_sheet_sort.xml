<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bg_bottomsheet">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urutkan Dokumen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingBottom="10dp" />

    <TextView
        android:id="@+id/sortTerbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Terbaru"
        android:textSize="17sp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/sortTerlama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Terlama"
        android:textSize="17sp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/sortAZ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Judul A - Z"
        android:textSize="17sp"
        android:padding="12dp" />

    <TextView
        android:id="@+id/sortDownload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="• Paling Banyak Download"
        android:textSize="17sp"
        android:padding="12dp" />

</LinearLayout>
