<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:padding="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tema Badge -->
        <TextView
            android:id="@+id/tvTemaGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:text="Tema"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_tema_badge"
            android:layout_marginBottom="8dp"/>

        <!-- Judul -->
        <TextView
            android:id="@+id/tvJudulGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Dokumen"
            android:textSize="15sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#000"/>

        <!-- Uploader - Jurusan -->
        <TextView
            android:id="@+id/tvInfoGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Uploader - Jurusan"
            android:textSize="12sp"
            android:textColor="#555"
            android:layout_marginTop="4dp"/>

        <!-- Tahun - Download -->
        <TextView
            android:id="@+id/tvTahunGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2025 â€¢ 12 download"
            android:textSize="12sp"
            android:textColor="#777"
            android:layout_marginTop="2dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
